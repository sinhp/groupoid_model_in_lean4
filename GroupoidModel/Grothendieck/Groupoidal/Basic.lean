    (w_fiber : f.fiber = eqToHom (by rw [w_base]) ‚â´ g.fiber) : f = g := by
  apply Hom.hext <;> aesop

theorem Hom.ext_iff (x y : ‚à´ F) (f g : x ‚ü∂ y) :
    (‚àÉ w_base : f.base = g.base, f.fiber = eqToHom (by rw [w_base]) ‚â´ g.fiber) ‚Üî f = g := by
  constructor
  ¬∑ intro h
