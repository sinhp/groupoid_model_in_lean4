theorem comp_fiber {X Y Z : ‚à´(F)} (f : X ‚ü∂ Y) (g : Y ‚ü∂ Z) :
    (f ‚â´ g).fiber =
      eqToHom (by simp) ‚â´ (F.map g.base).map f.fiber ‚â´ g.fiber :=
  Grothendieck.Hom.comp_fiber _ _

