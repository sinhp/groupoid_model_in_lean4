lemma comp_forget_naturality {Œ± : F ‚ü∂ G} {X Y : Œì} (f : X ‚ü∂ Y) :
    (F ‚ãô Grpd.forgetToCat).map f ‚â´ Grpd.forgetToCat.map (Œ±.app Y)=
  Grpd.forgetToCat.map (Œ±.app X) ‚â´ (G ‚ãô Grpd.forgetToCat).map f := by
