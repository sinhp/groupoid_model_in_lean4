theorem hext {x y : ‚à´ F} (hbase : x.base = y.base) (hfiber : HEq x.fiber y.fiber) : x = y := by
  rcases x with ‚ü®xbase, xfiber‚ü©
  subst hbase
  subst hfiber
  rfl

theorem hext_iff {x y : ‚à´ F} : x.base = y.base ‚àß HEq x.fiber y.fiber
    ‚Üî x = y := by
  constructor
  ¬∑ intro ‚ü® hŒ± , hstr ‚ü©
    exact hext hŒ± hstr
  ¬∑ intro hCD
    subst hCD
    exact ‚ü® rfl , HEq.rfl ‚ü©

theorem Hom.hext {X Y : ‚à´ F} (f g : Hom X Y) (w_base : f.base = g.base)
    (w_fiber : HEq f.fiber g.fiber) : f = g := by
  cases f; cases g
  congr

theorem Hom.hext_iff (x y : ‚à´ F) (f g : x ‚ü∂ y) :
    f.base = g.base ‚àß HEq f.fiber g.fiber ‚Üî f = g := by
  constructor
  ¬∑ intro h
    exact Hom.hext _ _ h.1 h.2
  ¬∑ aesop

