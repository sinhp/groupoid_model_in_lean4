    : K = K' :=
    calc K
     _ = functorFrom (asFunctorFrom_fib K) (asFunctorFrom_hom K)
         (asFunctorFrom_hom_id K) (asFunctorFrom_hom_comp K) :=
         (asFunctorFrom K).symm
     _ = functorFrom (asFunctorFrom_fib K') (asFunctorFrom_hom K')
         (asFunctorFrom_hom_id K') (asFunctorFrom_hom_comp K') := by
         apply functorFrom_eq_of
         ¬∑ exact hhom
         ¬∑ exact hfib
     _ = K' := asFunctorFrom K'

