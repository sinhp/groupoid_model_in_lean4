    (hfib : asFunctorFrom_fib K = asFunctorFrom_fib K')
    (hhom : ‚àÄ {c c' : C} (f : c ‚ü∂ c'), asFunctorFrom_hom K f ‚âç asFunctorFrom_hom K' f)
    : K = K' := by
  fapply functorFrom_ext
  ¬∑ assumption
  ¬∑ intros
    apply eq_of_heq
    simp only [heq_eqToHom_comp_iff, comp_eqToHom_heq_iff]
    apply hhom

